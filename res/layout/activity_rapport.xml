<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Rapport" >

    <LinearLayout
        android:id="@+id/hej"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listRapport"
            android:layout_width="match_parent"
            android:layout_height="392dp"
            android:scrollbars="vertical"
            android:scrollingCache="true" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/titleSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hej"
        android:layout_centerHorizontal="true"
        android:text="@string/rapport_prioritet" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titleSlider" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100" >

            <RadioButton
                android:id="@+id/rbLow"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@+id/hej"
                android:layout_alignParentBottom="true"
                android:layout_weight="85"
                android:text="LÃ¥g" />

            <RadioButton
                android:id="@+id/rbEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/hej"
                android:layout_alignTop="@+id/radioButton"
                android:layout_gravity="right|center_vertical"
                android:checked="false"
                android:text="Akut" />
        </LinearLayout>
    </RadioGroup>

</RelativeLayout>