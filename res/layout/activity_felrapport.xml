<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<Spinner
		android:layout_marginRight="15dp"
		android:layout_marginLeft="15dp"
		android:id="@+id/spinner1"
		android:layout_marginTop="20dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<Spinner
			android:layout_marginRight="15dp"
			android:layout_marginLeft="15dp"
			android:id="@+id/spinner2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/spinner1"
			android:layout_marginTop="20dp"
			android:layout_centerHorizontal="true"/>
	<EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:inputType="textShortMessage|textMultiLine|textCapSentences|textAutoCorrect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="top"
        android:layout_below="@+id/spinner2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="26dp"
        android:ems="10" android:background="@color/white"/>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" android:id="@+id/linearLayout"
        android:layout_below="@+id/editText1" android:layout_marginTop="20dp">
            <ImageButton
		            android:layout_marginLeft="50dp"
	            android:background="@null"
	            android:layout_weight="1"
                android:id="@+id/buttonCamera"
                android:onClick="btnCameraClick"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/camera" />
            <ImageButton
		            android:layout_marginRight="50dp"
	            android:background="@null"
                android:id="@+id/buttonMic"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/mic" />
    </LinearLayout>

	<TextView
		android:id="@+id/filler"
        style="@style/sectionHeader"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="25dp"/>

	<RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
			android:weightSum="2">
		<RadioButton
				android:layout_marginLeft="15dp"
			android:layout_weight="1"
		    android:id="@+id/radio0"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:checked="true"
		    android:text="@string/radioNormal" />
		<RadioButton
			android:layout_weight="1"
		    android:id="@+id/radio2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/radioHigh" android:checked="false"
			android:layout_marginLeft="140dp"/>
	</RadioGroup>
	<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginTop="15dp"
			android:text="@string/txtPrio"
			android:id="@+id/textView" android:layout_below="@+id/filler" android:layout_centerHorizontal="true"/>
</RelativeLayout>